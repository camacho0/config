set number
set numberwidth=1
set mouse=r
set clipboard=unnamed
"set showcmd
"set ruler
set encoding=utf-8
set showmatch
"set sw=2
set relativenumber
syntax enable
set tabstop=2
set autoindent
set laststatus=2
set bg=dark

call plug#begin('~/.vim/plugged')
"tema
Plug 'morhetz/gruvbox'
"IDE
"Plug 'easymotion/vim-easymotion'

call plug#end()

colorscheme gruvbox
let g:gruvbox_contrast_dark="hard"


let mapleader=" "
nmap <Leader>s :w<CR>
nmap <Leader>m :wq<CR> 
